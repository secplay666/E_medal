<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 图片预览 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imagePreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.7">
        
        <com.canhub.cropper.CropImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/ImageView"
            app:cropGuidelines="on"
            app:cropFixAspectRatio="true"
            app:cropAspectRatioX="4"
            app:cropAspectRatioY="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
            
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 保存按钮 -->
    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_save"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/btn_save_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 旋转按钮：放在保存按钮左侧 -->

    <!-- 返回按钮已移除，使用系统导航栏的返回按钮 -->

    <!-- 控制面板 -->

    <ImageButton
        android:id="@+id/btnRotate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="旋转图片"
        android:src="@drawable/ic_rotate_right"
        app:layout_constraintEnd_toStartOf="@id/btnSave"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@id/toolPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 确认裁剪按钮：用户裁剪完成后点击，固定裁剪结果 -->
        <Button
            android:id="@+id/btnConfirmCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定裁剪"
            android:layout_marginBottom="8dp"/>

        <!-- 二值化阈值控制 -->
        <LinearLayout
            android:id="@+id/thresholdControlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threshold_value"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/thresholdSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="255"
                    android:progress="128"/>

                <TextView
                    android:id="@+id/thresholdValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="128"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 底部工具 -->
    <LinearLayout
        android:id="@+id/toolPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:background="#2196F3"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageButton
                android:id="@+id/btnOriginal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/btn_original_desc"
                android:src="@drawable/ic_image"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原图"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="SmallSp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageButton
                android:id="@+id/btnBinarize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/btn_binarize_desc"
                android:src="@drawable/ic_filter"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二值化"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="SmallSp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageButton
                android:id="@+id/btnAdaptiveBinarize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/btn_adaptive_binarize_desc"
                android:src="@drawable/ic_auto_fix"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自适应"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="SmallSp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/btn_download_desc"
                android:src="@drawable/ic_download"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="SmallSp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnColorToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:contentDescription="切换颜色: 黑/红"
                android:src="@drawable/ic_download"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="SmallSp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>